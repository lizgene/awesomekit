#!/usr/bin/env ruby

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require 'awesomekit'

NON_AUTH_ACTIONS = ['logout', 'help']
requires_authentication = (ARGV & NON_AUTH_ACTIONS).size > 0

Awesomekit::Authenticator.authorize! if requires_authentication

Awesomekit::CLI.start(ARGV)
